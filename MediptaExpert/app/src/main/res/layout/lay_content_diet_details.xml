<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshDiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:layout_marginTop="50dp"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/textbg"
        android:elevation="5dp"
        android:padding="16dp"
        android:layout_margin="16dp">

        <TextView
            android:text="WATER INTAKE"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtWaterIntake"
            android:text="00"
            android:gravity="right"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:padding="16dp"
        android:background="@drawable/textbg"
        android:orientation="horizontal"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/txtTablets"
            android:text="TABLETS "
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:drawablePadding="200dp"
            android:drawableRight="@drawable/ic_arrow_pink"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:elevation="5dp"
        android:background="@drawable/textbg"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/txtFoodNotAllowed"
            android:text="FOOD NOT ALLOWED"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="130dp"
            android:drawableRight="@drawable/ic_arrow_pink"/>

    </LinearLayout>

</LinearLayout>