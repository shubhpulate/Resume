<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#b6fa9f" />
            <gradient android:angle="-90" android:startColor="#2e9321" android:endColor="#0b761a"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#a9ec92" />
            <solid android:color="#42a342"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#71da54" />
            <gradient android:angle="-90" android:startColor="#9eed98" android:endColor="#08790e" />
        </shape>
    </item>
</selector>